proc main
	; this is program to check the sign of the number in r2
	i32.load r2 -2
	i32.jl r2 0 negative ;jump if less r2 < 0 to negative label
	jmp maybe_positive

negative:
	i32.load r0 -1
	jmp exit

maybe_positive:
	i32.jg r2 0 positive
	i32.load r0 0
	jmp exit

positive:
	i32.load r0 1

exit:
	halt
end